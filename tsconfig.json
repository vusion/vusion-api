{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": false,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "declaration": true,
    // "declarationDir": "types",
    "rootDir": "src",
    "outDir": "out",
    "sourceMap": true,
    "pretty": true
  },
  "include": [
		"src"
	],
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}
